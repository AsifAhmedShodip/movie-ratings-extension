{
	"manifest_version": 2,
	"name": "IMDB Lookup",
	"version": "0.1",

	"browser_action": {
		"default_icon": "assets/icon.png",
		"default_popup": "popup.html"
	},

	"permissions": [
		"tabs",
		"<all_urls>"
 	],
 	
 	"background": {
 		"scripts": ["assets/jquery-1.8.3.min.js", "background.js"]
 	},
	

 	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["assets/jquery-1.8.3.min.js", "selection.js"],
			"run_at": "document_start",
			"all_frames": true
		}
	]
}